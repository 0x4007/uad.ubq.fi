{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2020",
    // "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "windi-attributify.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
