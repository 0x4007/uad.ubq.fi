{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext", "es2015"],
        "allowJs": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "target": "ES2020",
        // "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/ui": ["src/components/ui"],
            "@/ui/*": ["src/components/ui/*"],
            "@/lib/*": ["src/components/lib/*"],
            "@/dollar-types/*": ["src/components/lib/*"],
            "@/fixtures/*": ["src/fixtures/*"]
        }
    },
    "include": ["src/global.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "contracts"]
}
