{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "allowJs": true,
    "noEmit": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2020",
    // "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/ui": ["components/ui"],
      "@/ui/*": ["components/ui/*"],
      "@/lib/*": ["components/lib/*"],
      "@/dollar-types/*": ["components/lib/*"],
      "@/fixtures/*": ["fixtures/*"],
      "@/ubiquistick-types": ["protocols/ubiquistick/types"],
      "@/dollar-types": ["protocols/dollar/artifacts/types"]
    }
  },
  "include": ["global.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "protocols"]
}
