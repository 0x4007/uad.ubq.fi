{
  "name": "@ubiquity/dollar-ui",
  "license": "MIT",
  "scripts": {
    "_cdroot": "./build-scripts/cd-to-project-root.sh",
    "predev": "run-s _cdroot ./build-scripts/run-local.sh",
    "dev": "next dev",
    "prestart": "run-s _cdroot",
    "start": "build-scripts/run-vercel.sh",
    "prepare": "husky install",
    "format": "run-s format:*",
    "format:prettier": "prettier --write . --ignore-path .gitignore",
    "format:eslint": "eslint . --ext .ts,.tsx --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "css:build": "tailwindcss -o pages/styles/tailwind.css",
    "css:watch": "run-s css:build --watch"
  },
  "_unused-scripts": {
    "stop": "kill $(lsof -t -i:8545) || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*/cache/",
      "**/*/artifacts/",
      "**/*/node_modules/**/*"
    ],
    "events": {
      "config": "",
      "exit": "",
      "crash": "stop",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    }
  },
  "devDependencies": {
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^7.0.1",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "tailwindcss": "^2.2.9",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "ethers": "^5.0.31",
    "react-dropdown-now": "^6.0.1",
    "hardhat": "^2.5.0",
    "next": "^11.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}