{
  "name": "@ubiquity/dollar-ui",
  "license": "MIT",
  "scripts": {
    "start": "run-s _cdroot contracts:build next:build next:start",
    "dev": "run-s _cdroot contracts:build next:dev",
    "_cdroot": "./build-scripts/cd-to-project-root.sh",
    "build": "run-s contracts:build next:build",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint . --ext .ts,.tsx --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "css:build": "tailwindcss -o pages/styles/tailwind.css",
    "css:watch": "tailwindcss -o pages/styles/tailwind.css --watch",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "prepare": "husky install",
    "contracts:init": "git submodule update --init --recursive --remote && cd contracts && yarn && cd ../the-ubiquity-stick && yarn",
    "contracts:build": "run-s contracts:build:*",
    "contracts:build:uad-contracts": "cd contracts && yarn build && yarn hardhat export --export ../fixtures/full-deployment.json --network mainnet",
    "contracts:build:the-ubiquity-stick": "cd the-ubiquity-stick && yarn build",
    "contracts:build:typechain": "typechain --target=ethers-v5  --out-dir abi/types abi/*.json",
    "contracts:node": "cd the-ubiquity-stick && yarn hardhat node --fork-block-number 14044209 ",
    "contracts:faucet": "cd contracts && yarn node:faucet"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*/cache/",
      "**/*/artifacts/",
      "**/*/node_modules/**/*"
    ],
    "events": {
      "config": "",
      "exit": "",
      "crash": "stop",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    }
  },
  "devDependencies": {
    "@svgr/webpack": "^6.1.2",
    "classnames": "^2.3.1"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.5",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "autoprefixer": "^10.4.0",
    "eslint": "^7.16.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsc": "^2.0.0",
    "ethers": "^5.5.4",
    "husky": "^7.0.1",
    "lint-staged": ">=10",
    "next": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropdown-now": "^6.0.1",
    "tailwindcss": "^3.0.6",
    "typechain": "^7.0.0",
    "typescript": "^4.3.2"
  }
}
