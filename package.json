{
  "name": "@ubiquity/dollar",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "__test:watch:ci": "nodemon",
    "build:fleek": "run-s build:cd",
    "build:cd": "run-s build:init build:ui",
    "install:env": "cp .env.example .env",
    "install:protocols": "run-s _protocols:install:* build:protocols",
    "_protocols:install": "run-p _protocols:install:*",
    "_protocols:install:dollar": "cd ./protocols/dollar && yarn",
    "_protocols:install:nft": "cd ./protocols/ubiquistick && yarn",
    "build:protocols": "run-s _protocols:build:protocols _protocols:build:artifacts _protocols:build:typechain _protocols:build:summary",
    "_protocols:build:typechain": "typechain --target=ethers-v5 --out-dir ./fixtures/abi/types ./fixtures/abi/*.json",
    "_protocols:build:protocols": "run-p _protocols:build:protocols:*",
    "_protocols:build:protocols:nft": "cd ./protocols/ubiquistick && yarn build",
    "_protocols:build:protocols:dollar": "cd ./protocols/dollar && yarn build",
    "_protocols:build:artifacts": "run-p _protocols:build:artifacts:*",
    "_protocols:build:artifacts:nft": "./utils/build-artifacts.sh ./protocols/ubiquistick",
    "_protocols:build:artifacts:dollar": "./utils/build-artifacts.sh ./protocols/dollar",
    "_protocols:build:summary": "node ./utils/generate-contracts-addresses.js",
    "format": "run-p _format:*",
    "_format:prettier": "prettier --write .",
    "_format:eslint": "eslint . --ext .ts,.tsx --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "build:ui": "next build && next export --outdir web/dapp",
    "build:init": "run-s install:env install:protocols",
    "dev": "run-p dev:*",
    "dev:protocols": "./utils/dev-chain-init.sh",
    "dev:ui": "next dev",
    "_protocols:deploy": "run-p _protocols:deploy:*",
    "_protocols:deploy:protocols:nft": "cd ./protocols/ubiquistick && yarn hardhat deploy",
    "_protocols:deploy:protocols:dollar": "cd ./protocols/dollar && yarn hardhat deploy"
  },
  "_scripts": {
    "start": "run-s install:env install:protocols dev",
    "start:headless": "run-s install:env install:protocols dev:protocols",
    "build:ui": "yarn next build",
    "_protocols:clean": "run-p _protocols:clean:*",
    "_protocols:clean:dollar": "cd ./protocols/dollar && yarn clean",
    "_protocols:clean:nft": "cd ./protocols/ubiquistick && yarn clean",
    "protocols:run:nft": "cd ./protocols/ubiquistick && hardhat node --hostname 0.0.0.0 --fork-block-number 14800000",
    "protocols:run:faucet": "cd ./protocols/dollar && yarn node:faucet",
    "killscript": "kill `ps | grep dev-chain-init.sh | grep -v grep | awk '{ print $1 }'`",
    "__format:cspell": "cspell '**'"
  },
  "dependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@ethereum-waffle/chai": "^3.4.3",
    "@ethereum-waffle/mock-contract": "^3.3.1",
    "@ethereum-waffle/provider": "^3.4.1",
    "@ethereumjs/block": "^3.6.1",
    "@ethereumjs/blockchain": "^5.5.1",
    "@ethereumjs/common": "^2.6.2",
    "@ethereumjs/ethash": "^1.1.0",
    "@ethereumjs/tx": "^3.5.0",
    "@ethereumjs/vm": "^5.7.1",
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/address": "^5.5.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/hardware-wallets": "^5.5.0",
    "@ethersproject/networks": "^5.5.2",
    "@ethersproject/providers": "^5.5.3",
    "@ethersproject/solidity": "^5.5.0",
    "@lavamoat/allow-scripts": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "^4.5.0",
    "@tippyjs/react": "^4.2.5",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/big.js": "^6.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.6.3",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@uniswap/lib": "^4.0.1-alpha",
    "@uniswap/sdk": "^3.0.3",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "abi-to-sol": "^0.6.4",
    "autoprefixer": "^10.4.8",
    "axios": "^0.27.2",
    "babel-eslint": "^10.1.0",
    "big.js": "^6.1.1",
    "chai": "^4.3.6",
    "classnames": "^2.3.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-tsc": "^2.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.8.4",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next": "^12.2.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.19",
    "solidity-linked-list": "^5.1.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.5.0",
    "typechain": "^8.1.0",
    "typescript": "^4.5.5",
    "usb": "^2.1.2"
  },
  "nodemonConfig": {
    "events": {
      "config": "",
      "exit": "",
      "crash": "",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    },
    "verbose": false,
    "ignore": [
      "**/*.json",
      "fixtures/**",
      "protocols/*/types/**",
      "**/*/cache/",
      "**/*/artifacts/"
    ],
    "ext": "ts,sh,tsx",
    "exec": "yarn build:cd"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
