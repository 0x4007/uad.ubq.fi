{
  "name": "@ubiquity/monorepo",
  "version": "1.0.1-beta",
  "private": true,
  "author": "Ubiquity DAO",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/dapp",
    "packages/contracts"
  ],
  "engines": {
    "node": ">=20.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@cspell/dict-node": "^4.0.3",
    "@cspell/dict-software-terms": "^3.3.18",
    "@cspell/dict-typescript": "^3.1.2",
    "@lavamoat/allow-scripts": "^2.3.0",
    "@types/node": "^20.11.19",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "cspell": "6.31.1",
    "esbuild": "^0.20.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-tsc": "^2.0.0",
    "knip": "^5.0.1",
    "lint-staged": "^15.2.2",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "rimraf": "3.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "yarn-audit-fix": "^9.3.7"
  },
  "scripts": {
    "build:all": "yarn workspaces foreach run build",
    "build:dapp": "yarn workspace @ubiquity/dapp run build",
    "dev:dapp": "yarn workspace @ubiquity/dapp run start",
    "test:all": "yarn workspace @ubiquity/contracts run test:unit",
    "coverage": "yarn workspace @ubiquity/contracts run test:coverage",
    "clean:all": "yarn workspaces foreach run clean && rimraf node_modules",
    "lint:all": "yarn workspaces foreach run lint",
    "postinstall": "yarn build:all",
    "start": "tsx build/esbuild-server.ts",
    "build": "tsx build/esbuild-build.ts",
    "format": "run-s format:lint format:prettier format:cspell",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format:cspell": "cspell **/*",
    "knip": "knip",
    "knip-ci": "knip --no-exit-code --reporter json",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "lint-staged": {
      "*.{js,jsx,ts,tsx,json}": [
        "prettier --write",
        "eslint --fix",
        "cspell --no-must-find-files"
      ],
      "*.sol": [
        "prettier --write",
        "cspell --no-must-find-files"
      ]
    },
    "packageManager": "yarn@3.2.3",
    "lavamoat": {
      "allowScripts": {
        "$root$": true,
        "bufferutil": true,
        "utf-8-validate": true,
        "styled-components": false,
        "keccak": true,
        "dtrace-provider": true,
        "bigint-buffer": true,
        "secp256k1": true,
        "classic-level": true,
        "@ubiquity/monorepo": true,
        "napi-macros/example": true,
        "husky": true
      }
    }
  }
}
